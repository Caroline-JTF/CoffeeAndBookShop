                                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                        </svg>
                                    </a>
                                </div>

                            </td>
                        </tr>    
                    {% endfor %}
                </tbody>

            </table>

            <button id="addFood" class="btn-center">
                <a href="{{ path('app_admin_add_food') }}">
                    <img src="/assets/img/icons/beans-black.png" alt="">
                    Ajouter une viennoiserie ?
                </a>
            </button>

        </section>

        {# ==================== SECTION : BOOKS ==================== #}
        {# ==================== SECTION : BOOKS ==================== #}
        {# ==================== SECTION : BOOKS ==================== #}

        <section class="box5 box">

            <h2 class="color-dark font-serif text-center uppercase">Liste des livres</h2>
            <a href="#addBook" class="text-center uppercase color-red font-serif"> Ajouter un livre?</a>

            <table>
