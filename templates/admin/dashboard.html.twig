        {# ================= BUTTON =============== #}
        {# ======================================== #}

        <section class="command-btn">

            {# <button>Ajouter un café</button> #}
            <button class="btn1">Les cafés</button>
            {# <button>Ajouter une viennoiserie</button> #}
            <button class="btn2">Les viennoiseries</button>
            {# <button>Ajouter un livre</button> #}
            <button class="btn3">Les livres</button>
            {# <button>Ajouter un évènement</button> #}
            <button class="btn4">Les évènements</button>
            <button class="btn5">Les utilisateurs</button>

