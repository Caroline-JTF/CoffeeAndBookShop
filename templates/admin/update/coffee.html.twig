{% extends "base.html.twig" %}

{# ======================================== #}
{# ================== STYLE =============== #}
{# ======================================== #}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/form.css">
{% endblock %}

{# ======================================== #}
{# ================= TITLE ================ #}
{# ======================================== #}

{% block title %}Modifier le café{% endblock %}

{# ======================================== #}
{# ================= BODY ================= #}
{# ======================================== #}

{% block body %}

    {# ======================================== #}
    {# ================ HEADING =============== #}
    {# ======================================== #}

    <section class="heading">
        <p>What's happening here?</p>
        <h2>Modifier le café suivant : {{ coffee.name }}</h2>
        <a href="{{ path('app_admin_dashboard') }}">Retour</a>
    </section>

    {# ======================================== #}
    {# ================= COFFEE =============== #}
    {# ======================================== #}

    <section class="section-form">
    
        {# FORMULAIRE #}
        <div class="container-form">

            {{ form_start(form) }}
            
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
                {{ form_row(form.price) }}
                {{ form_row(form.img) }}

            {{ form_end(form) }}

        </div>

    </section>

    
{% endblock %}