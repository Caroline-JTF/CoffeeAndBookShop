        <section id="personnel">

            <h2 class="text-center mt-5">Le C&B c'est qui?</h2>

            <div class="container-personnel">

                <div class="alexis card-presentation">
                    <img src="{{ asset('assets/img/homepage/alexis.jpg') }}"/>
