{% extends "base.html.twig" %}

{% block title %}C&B : La carte{% endblock %}

{% block body %}

    <!-- Navbar -->
    <style>
        header h1{
            font-family: 'Playfair Display', serif;
            text-transform: uppercase;
            text-align: center;
            color: #efece9;
            text-shadow:
                    1px 0 1px #d9ccbc,
                    0 1px 1px  #efece9,
                    2px 1px 1px #d9ccbc,
                    1px 2px 1px  #efece9,
                    3px 2px 1px #d9ccbc,
                    2px 3px 1px  #efece9,
                    4px 3px 1px #d9ccbc,
                    3px 4px 1px  #efece9,
                    5px 4px 1px #d9ccbc,
                    4px 5px 1px  #efece9,
                    6px 5px 1px #d9ccbc,
                    5px 6px 1px  #efece9,
                    7px 6px 1px #d9ccbc;
        }
        @media screen and (max-width: 320px){
            header h1{
                font-size: 2.5rem !important;
            }
        }
        ul:first-child li:first-child a{
            color : #f5a637 !important;
        }
        @media screen and (max-width: 320px){
            #menuTabs{
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }
        }
    </style>

    {# ================================================== #}

    <!-- Header -->
    <header data-jarallax data-speed=".8" style="background-image: url(assets/img/background/bg-header.jpg);">
        <div class="pt-10 pb-8 pt-md-15 pb-md-13 bg-black-50">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6 text-center">

                        <!-- Heading -->
                        <h1 class="display-6 fw-bold text-white">
                            La carte
                        </h1>

                    </div>
                </div>
            </div>
        </div>
    </header>

    {# ================================================== #}

    <!-- Menu -->
    <section class="py-7 py-md-9 border-bottom">

        <div class="container">

            <div class="row justify-content-center">

                <div class="col-12 col-md-8 col-lg-6 text-center">

                    <!-- Heading -->
                    <h2 class="mb-2">
                        Parcourez les catégories
                    </h2>

                    <!-- Subheading -->
                    <p class="mb-6">
                        AN : Le prix des livres corresponds à la caution chaque livre emprunté doit être rendu
                    </p>

                </div>

            </div>

            <div class="row">

                <div class="col">

                    <!-- Navigation -->
                    <div class="nav justify-content-center mb-6" id="menuTabs" role="tablist">

                        <a class="nav-link active" id="coffeeTab" data-bs-toggle="tab" href="#coffee" role="tab" aria-controls="coffee" aria-selected="true">
                            Café
                        </a>

                        <a class="nav-link" id="foodTab" data-bs-toggle="tab" href="#food" role="tab" aria-controls="food">
                            Viennoiserie
                        </a>

                        <a class="nav-link" id="bookTab" data-bs-toggle="tab" href="#book" role="tab" aria-controls="book">
                            Book
                        </a>

                    </div>

                </div>

            </div>

            <div class="row">

                <div class="col-12">

                    <!-- Content -->
                    <div class="tab-content" id="menuContent">

                        <!-- Coffee -->
                        <div class="tab-pane fade show active" id="coffee" role="tabpanel" aria-labelledby="coffeeTab">

                            <div class="row">

                                {% for coffee in coffees %}

                                    <div class="col-12 col-md-6">

                                        <div class="py-3 border-bottom">

                                            <div class="row">

                                                <div class="col-3 align-self-center">

                                                    <!-- Image -->
                                                    <div class="ratio ratio-1x1">
                                                        {% if coffee.img == true %}
                                                            <img src="{{ asset('/uploads/' ~ coffee.img) }}" alt="{{ coffee.name }}"/>
                                                        {% endif %}
                                                    </div>

                                                </div>

                                                <div class="col-7">

                                                    <!-- Heading -->
                                                    <h5 class="mb-2">{{ coffee.name }}</h5>

                                                    <!-- Text -->
                                                    <p class="mb-0">
                                                        {{ coffee.description}}
                                                    </p>

                                                </div>

                                                <div class="col-2">

                                                    <!-- Price -->
                                                    <div class="fs-4 text-center text-black" style="font-family: 'Playfair Display', serif;">
                                                        {{ coffee.price }}
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                    {% else %}

                                        <p class="else">Il n'y a pas de café à la carte</p>

                                {% endfor %}

                            </div>
                        </div>

                        <!-- Food -->
                        <div class="tab-pane fade" id="food" role="tabpanel" aria-labelledby="foodTab">

                            <div class="row">

                                {% for food in foods %}

                                    <div class="col-12 col-md-6">

                                        <div class="py-3 border-bottom">

                                            <div class="row">

                                                <div class="col-3 align-self-center">

                                                    <!-- Image -->
                                                    <div class="ratio ratio-1x1">
                                                        {% if food.img == true %}
                                                            <img src="{{ asset('/uploads/' ~ food.img) }}" alt="{{ food.name }}"/>
                                                        {% endif %}
                                                    </div>

                                                </div>

                                                <div class="col-7">

                                                    <!-- Heading -->
                                                    <h5 class="mb-2">{{ food.name }}</h5>

                                                    <!-- Text -->
                                                    <p class="mb-0">
                                                        {{ food.description}}
                                                    </p>

                                                </div>

                                                <div class="col-2">

                                                    <!-- Price -->
                                                    <div class="fs-4 text-center text-black" style="font-family: 'Playfair Display', serif;">
                                                        {{ food.price }}
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                {% else %}

                                    <p class="else">Il n'y a pas de viennoiserie à la carte</p>

                                {% endfor %}

                            </div>
                        </div>

                        <!-- Book -->
                        <div class="tab-pane fade" id="book" role="tabpanel" aria-labelledby="bookTab">

                            <div class="row">

                                {% for book in books %}

                                    <div class="col-12 col-md-6">

                                        <div class="py-3 border-bottom">

                                            <div class="row">

                                                <div class="col-3 align-self-center">

                                                    <!-- Image -->
                                                    <div class="ratio ratio-1x1">
                                                        {% if book.img == true %}
                                                            <img src="{{ asset('/uploads/' ~ book.img) }}" alt="{{ book.name }}"/>
                                                        {% endif %}
                                                    </div>

                                                </div>

                                                <div class="col-7">

                                                    <!-- Heading -->
                                                    <h5 class="mb-2">{{ book.name }}</h5>

                                                    <!-- Text -->
                                                    <p class="mb-0">
                                                        {{ book.description}}
                                                    </p>

                                                </div>

                                                <div class="col-2">

                                                    <!-- Price -->
                                                    <div class="fs-4 text-center text-black" style="font-family: 'Playfair Display', serif;">
                                                        {{ book.price }}
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                {% else %}

                                    <p class="else">Il n'y a pas de livre disponible</p>

                                {% endfor %}

                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </section>

{% endblock %}