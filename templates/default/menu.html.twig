{# ======================================== #}
{# ================ EXTENDS =============== #}
{# ======================================== #}
{% extends "base.html.twig" %}

{# ======================================== #}
{# ================ STYLE ================= #}
{# ======================================== #}

{% block stylesheets %}
    <link rel="stylesheet" href="assets/css/default/menu.css">
{% endblock %}


{# ======================================== #}
{# ================= TITLE ================ #}
{# ======================================== #}

{% block title %}La carte{% endblock %}

{# ======================================== #}
{# ================= BODY ================= #}
{# ======================================== #}

{% block body %}

    {# ======================================== #}
    {# ================ HEADING =============== #}
    {# ======================================== #}

    <section class="heading">
        <p>What's happening here?</p>
        <h2>Voici la carte du C&B</h2>
        <p>Cafés, viennoiseries et livres</p> 
    </section>

    {# ========================================== #}
    {# ================== BUTTON ================ #}
    {# ========================================== #}

     <section class="command-btn">

        <button class="btn1">
            Voir les cafés
        </button>
        <button class="btn2">
            Voir les douceurs
        </button>
        <button class="btn3">
            Voir les livres
        </button>

    </section>

    {# ========================================== #}
    {# =================== MENU ================= #}
    {# ========================================== #}

    <section class="container-menu">

        {# ========================================== #}
        {# ================== COFFEE ================ #}
        {# ========================================== #}

        <section class="menu menu1 active">

            <div class="heading">
                <h2 class="text-center font-serif uppercase">La carte des cafés</h2>
            </div>
            
            {% for coffee in coffees %}
                <div class="container-product">

                    <div class="product">
                        <img src="{{ asset('/uploads/' ~ coffee.img) }}" alt="{{ coffee.name }}" onerror="this.style.display='none';" />

                        <div class="text-product">
                            <div class="description">
                                <h2>{{ coffee.name }}</h2>
                                <p class="color-red">{{ coffee.description }}</p>
                            </div>
                            <div class="price">
                                <div class="line"></div> 
                                <p>{{ coffee.price }}€</p>
                            </div>  
                            
                        </div>
                    </div>

                </div>

                {% else %}
                    
                    <p class="else">Il n'y a pas de café à la carte</p>

            {% endfor %}
            
        </section>

        {# ========================================== #}
        {# =================== FOOD ================= #}
        {# ========================================== #}

        <section class="menu menu2">

            <div class="heading">
                <h2 class="text-center font-serif uppercase">La carte des viennoiseries</h2>
            </div>
            
            {% for food in foods %}
                <div class="container-product">

                    <div class="product">
                        <img src="{{ asset('/uploads/' ~ food.img) }}" alt="{{ food.name }}" onerror="this.style.display='none';"/>

                        <div class="text-product">
                            <div class="description">
                                <h2>{{ food.name }}</h2>
                                <p class="color-red">{{ food.description }}</p>
                            </div>
                            <div class="price">
                                <div class="line"></div> 
                                <p>{{ food.price }}€</p>
                            </div>  
                            
                        </div>
                    </div>

                </div>

                {% else %}
                    
                    <p class="else">Il n'y a pas de viennoiseries à la carte</p>

            {% endfor %}
            
        </section>

        {# ========================================== #}
        {# =================== BOOK ================= #}
        {# ========================================== #}

        <section class="menu menu3">

            <div class="heading">
                <h2 class="text-center font-serif uppercase">La carte des livres</h2>
                <p>Le prix des livres correspond à la caution</p>
                <p>Chaque livre emprunté doit être rendu</p>
            </div>
            
            {% for book in books %}
                <div class="container-product">

                    <div class="product">
                        <img src="{{ asset('/uploads/' ~ book.img) }}" alt="{{ book.name }}" onerror="this.style.display='none';"/>

                        <div class="text-product">
                            <div class="description">
                                <h2>{{ book.name }}</h2>
                                <p class="color-red">{{ book.description }}</p>
                            </div>
                            <div class="price">
                                <div class="line"></div> 
                                <p>{{ book.price }}€</p>
                            </div>  
                            
                        </div>
                    </div>

                </div>

                {% else %}
                    
                    <p class="else">Il n'y a pas de livre à la carte</p>

            {% endfor %}
            
        </section>

       

    </section>{# END CONTAINER MENU #}

    <button class="btn-center">
        <a href="#">Revenir en haut</a>
    </button>

{% endblock %}

{% block javascripts %}
    <script src="assets/JS/default/menu.js"></script>
{% endblock %}